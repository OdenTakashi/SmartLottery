<% set_meta_tags(title: '新規登録') %>

<div class="w-full max-w-xs mx-auto mt-10">
  <h1 class="font-hairline mb-6 text-center text-xl">新規登録</h1>

  <%= form_for(resource,
    as: resource_name,
    url: registration_path(resource_name),
    html: {
            class: "bg-stone-100 mb-4 px-8 pt-6 pb-8 rounded"
    }
  ) do |f| %>

    <%= render 'users/shared/error_messages', resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.email_field :email,
        autocomplete: "email",
        placeholder: "user@example.com",
        class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <% if @minimum_password_length %>
          <small><em class="text-gray-600">(<%= @minimum_password_length %> 文字以上にしてください)</em></small>
      <% end %>
      <%= f.password_field :password,
        autocomplete: "new-password",
        class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none"
      %>
    </div>

    <div class="mb-6">
      <%= f.label :password_confirmation, class: "block font-bold mb-2 text-gray-700 text-sm" %>
      <%= f.password_field :password_confirmation,
        autocomplete: "new-password",
        class: "appearance-none border leading-tight focus:outline-none px-3 py-2 rounded text-gray-700 w-full"
      %>
    </div>

    <div class="mb-2 flex justify-center">
      <%= f.submit "登録する",
        data: { turbo: 'false' },
        class: "cursor-pointer button rounded bg-blue-800 hover:bg-blue-900 font-bold text-white focus:outline-none py-2 px-4"
      %>
    </div>

  <% end %>
  <%= button_to 'キャンセル', root_path, method: :get, class: 'underline text-sm hover:no-underline' %>
</div>
