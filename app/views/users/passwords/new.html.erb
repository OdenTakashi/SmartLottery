<% set_meta_tags(title: 'パスワードを忘れた場合') %>

<div class="w-full max-w-xs mx-auto mt-10">
  <h1 class="font-hairline mb-6 text-center text-xl">
    <%= t 'devise.passwords.new.forgot_your_password' %>
  </h1>

  <%= form_for(resource,
    as: resource_name,
    url: password_path(resource_name),
    html: {
      method: :post,
      class: "mb-4 px-8 pt-6 pb-8 rounded"
    }) do |f| %>

    <%= render "users/shared/error_messages", resource: resource %>

    <div class="mb-10">
        <%= f.label :email, class: "block font-bold mb-2 text-gray-700 text-sm" %>
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "appearance-none border leading-tight focus:outline-none px-3 py-2 roundedtext-gray-700 w-full"
        %>
    </div>

    <div class="mb-4">
        <%= f.submit "パスワードの再設定方法を送信する",
          class: "button cursor-pointer bg-blue-800 hover:bg-blue-900 text-white font-bold py-2 px-4 rounded focus:outline-none w-full text-sm" %>
    </div>

    <%= render "users/shared/links" %>

    <div class='mt-10'>
      <%= link_to 'キャンセル', root_path, class: 'underline text-sm hover:no-underline' %>
    </div>
  <% end %>
</div>
