<% set_meta_tags(title: 'パスワード再設定') %>

<div class="w-full max-w-xs mx-auto mt-10">
    <h2 class="font-hairline mb-6 text-center text-xl">
      <%= t 'devise.passwords.edit.change_my_password' %>
    </h2>

    <%= form_for(resource,
                as: resource_name,
                url: password_path(resource_name),
                html: {
                  method: :put,
                  class: "bg-white mb-4 px-8 pt-6 pb-8 rounded"
                }
        ) do |f| %>

        <%= render "users/shared/error_messages", resource: resource %>

        <%= f.hidden_field :reset_password_token %>

        <div class="mb-4">
            <%= f.label :password, "新しいパスワード",
                        class: "block font-bold mb-2 text-gray-700 text-sm"
            %>
            <% if @minimum_password_length %>
                <small><em class="text-gray-600">(<%= @minimum_password_length %> 文字以上で入力してください)</em></small>
            <% end %>
            <%= f.password_field :password,
                                  autofocus: true,
                                  autocomplete: "new-password",
                                  class: "appearance-none border leading-tight focus:outline-none px-3 py-2 rounded text-gray-700 w-full"
            %>
        </div>

        <div class="mb-4">
            <%= f.label :password_confirmation,
                        "新しいパスワード(確認用)",
                        class: "block font-bold mb-2 text-gray-700 text-sm"
            %>
            <%= f.password_field :password_confirmation,
                                  autocomplete: "off",
                                  class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none"
            %>
        </div>

        <div class="mb-4 flex justify-center">
            <%= f.submit "変更する",
                          class: "button cursor-pointer w-40 bg-blue-900 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none text-sm"
            %>
        </div>

        <%= render "users/shared/links" %>
    <% end %>
</div>
