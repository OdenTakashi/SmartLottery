<% set_meta_tags(title: 'ログイン') %>

<div class="w-full max-w-xs mx-auto mt-10">
  <h1 class="font-hairline mb-6 text-center text-xl">
    <%= t 'devise.sessions.new.sign_in' %>
  </h1>

  <%= form_for(resource,
    as: resource_name,
    url: session_path(resource_name),
    html: {
        class: "bg-stone-100 mb-4 px-8 pt-6 pb-8 rounded"
    }
  ) do |f| %>

    <%= render "users/shared/error_messages", resource: resource %>

    <% if flash.present? %>
      <div class="bg-red-100 border border-red-500 text-red-700 p-4 mb-4" role="alert">
        <%- flash.each do |name, msg| %>
          <%= content_tag :p,
            msg.humanize,
            id: "flash_#{name}" if msg.is_a?(String) %>
        <% end %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autocomplete: "email",
        class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight foucs:outline-none",
        placeholder: 'user@example.com'
      %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.password_field :password,
        autocomplete: "current-password",
        class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none"
      %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2 leading-tight mt-1 text-blue-699 bg-gray-100 border-gray-300 rounded" %>
        <%= f.label :remember_me,
          class: "align-baseline inline-block text-gray-700 text-sm"
        %>
      </div>
    <% end %>

    <div class="mb-4 flex justify-center">
      <%= f.submit "ログイン",
        data: { turbo: 'false' },
        class: "cursor-pointer button rounded bg-lime-600 hover:bg-lime-700 text-white font-bold py-2 px-4 focus:outline-none"
      %>
    </div>

    <%= render "users/shared/links" %>

  <% end %>
  <%= button_to 'キャンセル', root_path, method: :get, class: 'underline text-sm hover:no-underline' %>
</div>
