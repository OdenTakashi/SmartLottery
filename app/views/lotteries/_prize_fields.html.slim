<!-- Nested Form for f -->
.nested-fields
  .bg-stone-100.border.border-gray.rounded.mt-5.w-full.p-6
    div
      = f.label :name, style: 'display: block'
      = f.text_field :name, placeholder: 'プロを目指す人のためのruby入門', class: 'w-full mt-2 rounded border border-gray-200'

    .mt-3
      = f.label :winners_count, style: 'display: block'
      = f.number_field :winners_count, placeholder: '当選者数を入力してください', class: 'w-full mt-2 rounded border border-gray-200'

    .mt-3
      = f.label :winning_email_subject, style: 'display: block'
      = f.text_field :winning_email_subject, placeholder: '当選者宛メールの件名を入力してください', class: 'w-full mt-2 rounded border border-gray-200'

    .mt-3
      = f.label :winning_email_body, style: 'display: block'
      = f.text_area :winning_email_body, placeholder: '当選者宛メールの本文を入力してください', class: 'w-full mt-2 rounded border border-gray-200 leading-10'

    .text-right.underline
        = link_to_remove_association '削除', f
